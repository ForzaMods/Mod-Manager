<mah:MetroWindow x:Class="Mod_Manager_V2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="Forza Mod Manager" Height="600" Width="1200"
        Background="Transparent" AllowsTransparency="True" BorderThickness="0"
        ResizeMode="NoResize" ShowTitleBar="False" ShowCloseButton="False" WindowStyle="None"
        AllowDrop="True" Loaded="MainWindow_Loaded">

    <Border x:Name="Background" Background="#3d3d3d" 
            CornerRadius="30">
        <Grid>
            <Button x:Name="Settings" Content="Settings"
                    Height="40" Width="100" Margin="25, 25" FontSize="15"
                    VerticalAlignment="Bottom" HorizontalAlignment="Right"
                    Foreground="White" Background="#2d2d2d" BorderBrush="Black"
                    Click="Settings_Button"/>

            <!-- Credits to ChrisF from https://stackoverflow.com/questions/1697413/wpf-rectangle-round-just-top-corners for this method -->
            <Border Grid.Row="0" Grid.ColumnSpan="2"
                    CornerRadius="30,30,0,0" Background="#2d2d2d"
                    Height="40" VerticalAlignment="Top">
            </Border>

            <Label Content="Forza Mod Manager" Margin="16, 0" Height="40" VerticalAlignment="Top" Foreground="White" FontSize="21"/>

            <!-- This is 100% stolen from the AIO V2 because i like it -->
            <Rectangle Grid.Column="1" HorizontalAlignment="Right" Height="20" Margin="0,12.5,16,0" VerticalAlignment="Top" Width="20" MouseDown="Exit_Button">
                <Rectangle.Fill>
                    <SolidColorBrush Color="Black" Opacity="0"/>
                </Rectangle.Fill>
            </Rectangle>
            
            <Path Data="M259.7625 259.7625A9.375 9.375 0 0 0 259.7625 246.4875L53.5125 40.2375A9.375 9.375 0 0 0 40.2375 53.5125L246.4875 259.7625000000001A9.375 9.375 0 0 0 259.7625 259.7625000000001zM40.2375 259.7625A9.375 9.375 0 0 1 40.2375 246.4875L246.4875 40.2375A9.375 9.375 0 0 1 259.7625000000001 53.5125L53.5125 259.7625000000001A9.375 9.375 0 0 1 40.2375 259.7625000000001z"
                  Fill="White" Stretch="Fill"
                  Width="20" Height="20"
                  Margin="0,12.5,16,0" Grid.Column="1" Focusable="False" HorizontalAlignment="Right" VerticalAlignment="Top" 
            />
            
        </Grid>

    </Border>
</mah:MetroWindow>
