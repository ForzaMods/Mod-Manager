<mah:MetroWindow x:Class="Mod_Manager_V2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="Forza Mod Manager" Height="600" Width="1200"
        Background="Transparent" AllowsTransparency="True" BorderThickness="0"
        ResizeMode="NoResize" ShowTitleBar="False" ShowCloseButton="False" WindowStyle="None"
        AllowDrop="True">

    <Border x:Name="Background" Background="#3d3d3d" CornerRadius="30">
        <Grid>
            <!-- Credits to ChrisF from https://stackoverflow.com/questions/1697413/wpf-rectangle-round-just-top-corners for this method -->
            <Border Grid.Row="0" Grid.ColumnSpan="2"
                    CornerRadius="25,25,0,0" Background="#2d2d2d"
                    Height="40" VerticalAlignment="Top" MouseDown="DraggingFunctionality"/>

            <Label Content="Forza Mod Manager" Margin="16, 0" Height="40" VerticalAlignment="Top" HorizontalAlignment="Left" Foreground="White" FontSize="21" MouseDown="DraggingFunctionality"/>

            <!--#region Buttons-->
            <!-- This is 100% stolen from the AIO V2 because i like it -->
            <Path x:Name="CloseButton"
                  Data="M259.7625 259.7625A9.375 9.375 0 0 0 259.7625 246.4875L53.5125 40.2375A9.375 9.375 0 0 0 40.2375 53.5125L246.4875 259.7625000000001A9.375 9.375 0 0 0 259.7625 259.7625000000001zM40.2375 259.7625A9.375 9.375 0 0 1 40.2375 246.4875L246.4875 40.2375A9.375 9.375 0 0 1 259.7625000000001 53.5125L53.5125 259.7625000000001A9.375 9.375 0 0 1 40.2375 259.7625000000001z"
                  Fill="White" Stretch="Fill"
                  Width="20" Height="20"
                  Margin="0,12,20,0" Focusable="False" HorizontalAlignment="Right" VerticalAlignment="Top"/>

            <Rectangle HorizontalAlignment="Right" Height="20" Margin="0,12,20,0" VerticalAlignment="Top" Width="20" MouseDown="CloseButton_MouseDown" Cursor="Hand">
                <Rectangle.Fill>
                    <SolidColorBrush Color="Black" Opacity="0"/>
                </Rectangle.Fill>
            </Rectangle>
            <!-- This is 100% stolen from the AIO V2 because i like it -->

            <Image Source="/Resources/Images/Settings.png" Width="21" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0, 12, 45, 0" OpacityMask="White" Grid.Column="1" MouseDown="Settings_Button" Cursor="Hand"/>

            <Path x:Name="HomeButton"
                  Stroke="White"
                  StrokeThickness="2"
                  Width="24"
                  Height="24"
                  Data="M12,20H6V12H3L12,3L21,12H18V20H12Z" Margin="1105,10,71,566"/>

            <Rectangle HorizontalAlignment="Right" Height="20" Margin="0,12,72,0" VerticalAlignment="Top" Width="22" MouseDown="HomeButton_MouseDown" Cursor="Hand">
                <Rectangle.Fill>
                    <SolidColorBrush Color="Black" Opacity="0"/>
                </Rectangle.Fill>
            </Rectangle>

        
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0, 8" x:Name="SortingButtons">
                    <Button Content="Default"     Click="CategoryButton_Click" Margin="0,0,10,0" Focusable="False" BorderThickness="0" Background="#3f3f3f"/>
                    <Button Content="Name"        Click="CategoryButton_Click" Margin="0,0,10,0" Focusable="False" BorderThickness="0" Background="#3f3f3f"/>
                    <Button Content="Version"     Click="CategoryButton_Click" Margin="0,0,10,0" Focusable="False" BorderThickness="0" Background="#3f3f3f"/>
                    <Button Content="Creator"     Click="CategoryButton_Click" Margin="0,0,10,0" Focusable="False" BorderThickness="0" Background="#3f3f3f"/>
                    <Button Content="Upload Date" Click="CategoryButton_Click" Margin="0,0,10,0" Focusable="False" BorderThickness="0" Background="#3f3f3f"/>
                    <Button x:Name="Installed" Content="Installed" Click="Installed_Click" Margin="0,0,10,0" Focusable="False" BorderThickness="0" Background="#3f3f3f"/>
                </StackPanel>
            </StackPanel>
            <!--#endregion-->
            <!--#region Mod pages, frames-->
            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,40,0,20" x:Name="MWModPages">
                <StackPanel Orientation="Vertical">
                    <ItemsControl ItemsSource="{Binding downloadedPages}" x:Name="modItemsControl" Width="300">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="Gray" BorderThickness="1" Margin="5" Padding="10">
                                    <StackPanel Orientation="Vertical">
                                        <Image Source="{Binding ImageLink}" Height="100" Width="100" />
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold" Margin="0,10,0,5" />
                                        <TextBlock FontStyle="Italic" FontSize="14" FontWeight="SemiBold">
                                            <Run Text="{Binding Version}" />
                                            <Run Text=" - " />
                                            <Run Text="{Binding Creator}" />
                                            <Run Text=" - " />
                                            <Run Text="{Binding UploadDate}" />
                                        </TextBlock>
                                        <TextBlock Text="{Binding Description}"/>
                                        <Button x:Name="UninstallButton" Content="Uninstall" HorizontalAlignment="Right" Margin="0,10,0,0"
                                                Click="UninstallButton_Click" />
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>

            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,40,0,20" x:Name="DWModPages">
                <StackPanel Orientation="Vertical">
                    <ItemsControl ItemsSource="{Binding DownloadedModPages}" x:Name="DWmodItemsControl">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="Gray" BorderThickness="1" Margin="5" Padding="10">
                                    <StackPanel Orientation="Vertical">
                                        <Image Source="{Binding ImageLink}" Height="100" Width="100" />
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold" Margin="0,10,0,5" />
                                        <TextBlock FontStyle="Italic" FontSize="14" FontWeight="SemiBold">
                                            <Run Text="{Binding Version}" />
                                            <Run Text=" - " />
                                            <Run Text="{Binding Creator}" />
                                            <Run Text=" - " />
                                            <Run Text="{Binding UploadDate}" />
                                        </TextBlock>
                                        <TextBlock Text="{Binding Description}" TextWrapping="Wrap" />
                                        <TextBlock Text="{Binding Installed}" TextWrapping="Wrap" />
                                        <Button Content="Download" HorizontalAlignment="Right" Margin="0,10,0,0"
                                                Click="DownloadButton_Click" />
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>

            <Frame x:Name="SettingsFrame" Source="/PagesAndWindows/Settings.xaml" Visibility="Hidden" Margin="0,40,0,20"/>
            <!--#endregion-->
        </Grid>
    </Border>
</mah:MetroWindow>
