<Window x:Class="modmanager.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Error Reporting" Height="200" Width="300"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="#3c3c3c"
        BorderThickness="1"
        WindowStartupLocation="CenterScreen" Topmost="True">
    <Grid>
        <Rectangle Fill="Black" Height="30" VerticalAlignment="Top" MouseLeftButtonDown="DragWindow_OnMouseLeftButtonDown" />
        <Label Content="An error occured" Foreground="White" Height="35" Width="125" FontSize="15" VerticalAlignment="Top" HorizontalAlignment="Center" MouseLeftButtonDown="DragWindow_OnMouseLeftButtonDown" />
        <Label Foreground="White" VerticalAlignment="Top" HorizontalAlignment="Center" Height="30" Content="Error code:" Margin="0,65,0,0" FontSize="15"/>
        <Label x:Name="errorcode" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" Height="25" FontSize="11" />
        <Button Click="CloseErrorReporting" Height="25" Width="70" BorderThickness="1" BorderBrush="Black" Content="Close" Foreground="White" Background="#1c1c1c" Margin="218,163,10,10"/>
    </Grid>
</Window>
