<Window x:Class="modmanager.Window3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Game Path" Height="200" Width="300"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="#2d2d30"
        BorderThickness="1"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Rectangle Fill="Black" Height="30" VerticalAlignment="Top" MouseLeftButtonDown="DragWindow_OnMouseLeftButtonDown" />
        <Label Content="Game Install Path wasnt found automatically." Foreground="White" Height="35" FontSize="13" VerticalAlignment="Top" HorizontalAlignment="Center" MouseLeftButtonDown="DragWindow_OnMouseLeftButtonDown" />
        <Label Foreground="White" VerticalAlignment="Top" HorizontalAlignment="Center" Height="30" Content="Do you want to set it now?" Margin="0,65,0,0" FontSize="15"/>
        <Button Click="ClosePathError" Height="25" Width="70" BorderThickness="1" BorderBrush="Black" Content="Later" Foreground="White" Background="#1c1c1c" Margin="218,163,10,10"/>
        <Button Click="SetPath" Height="25" Width="70" BorderThickness="1" BorderBrush="Black" Content="Set Path" Foreground="White" Background="#1c1c1c" Margin="143,163,85,10"/>
    </Grid>
</Window>
