<UserControl x:Class="modmanager.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="275" d:DesignWidth="350">
    <Grid>
        <Image Source="{Binding ImagePath}" Margin="0,0,0,108" />
        <TextBlock Text="{Binding Description}" Margin="0,168,0,26" />
        <Button Content="Download" Click="DownloadButton" FontSize="10" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,250,0,0" Width="350" Height="25" Foreground="White" Background="Black" BorderBrush="Black" RenderTransformOrigin="0.486,-1.852"/>
    </Grid>
</UserControl>
